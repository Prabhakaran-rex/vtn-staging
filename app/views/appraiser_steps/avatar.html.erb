<%= render :partial => "layouts/doc_has_changed" %>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="big-title">
      Account
    </div>
    <%= render :partial => "appraiser_tabs" %>
    <% if current_user.is_appraiser? %>
      <div class="alert alert-info">
        <i class="icon-warning-sign"></i>  <strong>NOTICE:</strong> This information is primarily for the private use of ValueThisNow.com and will not be made public. Only the appraiserâ€™s name, image and website will be made public.
      </div>
    <% end %>

    <%= simple_form_for @user, :url => wizard_path, :html => {:class => "form-horizontal"} do |f| %> 
      <div class="row">
        <div class="col-md-12">
          <%= image_tag @user.avatar_url(:small), :size => "180x180", :class => "img-responsive"%></br>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= link_to new_avatar_path, :class => "btn btn-success btn-sm" do %><span class="glyphicon glyphicon-camera"></span> Change your Image<% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= link_to "Previous Step", previous_wizard_path, :class => "btn btn-default" %>   
          <%= f.submit "Save and Continue", :class => "btn btn-success pull-right", :id => "btn_submit_avatar"%>
        </div>
      </div>
    <% end%>
    <input type="hidden" name="has_avatar" id="has_avatar" value=<%= current_user.avatar? %>>
  </div>
</div>
